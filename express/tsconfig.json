{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "Node16",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "@app/*": ["./*"],
            "*": ["node_modules/*"]
        }
    },
    "include": [
        "config/**/*",
        "controllers/**/*",
        "database/**/*",
        "exceptions/**/*",
        "middleware/**/*",
        "models/**/*",
        "src/services/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}