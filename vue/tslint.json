{
	"defaultSeverity": "warning",
	"extends": [
		"tslint:recommended"
	],
	"linterOptions": {
		"exclude": [
			"node_modules/**"
		]
	},
	"rules": {
		"align":false,
		"arrow-parens":false,
		"curly":false,
		"indent": [
			true,
			"tabs"
		],
		"interface-name": false,
		"no-consecutive-blank-lines": false,
		"ordered-imports": false,
		"object-literal-sort-keys": false,
		"quotemark": false,
		"trailing-comma":false,
		"typedef-whitespace":false,
		"whitespace":false
	}
}